---
import { Image } from "astro:assets";
import karussel1 from "../assets/images/frontpage/frontpage carousel_1.webp";
import karussel2 from "../assets/images/frontpage/frontpage carousel_2.webp";
import karussel3 from "../assets/images/frontpage/frontpage carousel_3.webp";
import karussel4 from "../assets/images/frontpage/frontpage carousel_4.webp";
import karussel5 from "../assets/images/frontpage/frontpage carousel_5.webp";

const images = [
  karussel1,
  karussel2,
  karussel3,
  karussel4,
  karussel5
];
---
<div x-data="{ current: 0 }" class="relative overflow-hidden w-full my-l">
    <div class="flex transition-transform duration-500" :style="'transform: translateX(-' + current * 20 + '%)'">
      {images.map((image, index) => (
        <div class="w-1/5 flex-shrink-0 px-2">
          <Image src={image} alt={`Carousel image ${index + 1}`} class="w-full h-full object-cover" />
        </div>
      ))}
    </div>
    <button @click="current = current > 0 ? current - 1 : 0" class="absolute left-0 top-1/2 transform -translate-y-1/2 bg-white p-2 shadow-md">
      &lt;
    </button>
    <button @click="current = current < images.length - 5 ? current + 1 : current" class="absolute right-0 top-1/2 transform -translate-y-1/2 bg-white p-2 shadow-md">
      &gt;
    </button>
  </div>
  